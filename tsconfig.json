{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es2021",
    "module": "es2022",
    "rootDir": "./src/",
    "outDir": "./lib/",
    "removeComments": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["chrome", "jquery"],
  },
  "include":["./src/**/*.ts", "src/debug.js"],
  "exclude": ["node_modules"]
}
